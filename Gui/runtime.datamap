# Runtime display

[global]
description=Object data map for MegaSquirt Runtime Display
tab_name=_Runtime Display

#----- Buttons ---------------------------------------------------------------

[runtime_start_realtime_button]
keys=handler,page
key_types=_ENUM_,_INT_
handler=_START_REALTIME_
page=0

[runtime_stop_realtime_button]
keys=handler,page
key_types=_ENUM_,_INT_
handler=_STOP_REALTIME_
page=0

#------ Gui objects ---------------------------------------------------------

[topframe]
keys=page,tab_ident
key_types=_INT_,_ENUM_
page=0
tab_ident=_RUNTIME_TAB_

#------- Runtime Status Indicators ------------------------------------------

[runtime_connected_label]
keys=page,bind_to_list,active_fg,inactive_fg
key_types=_INT_,_STRING_,_STRING_,_STRING_
active_fg=red
inactive_fg=dim grey
page=0
bind_to_list=connected_widgets

[runtime_cranking_label]
keys=page,bind_to_list,source,bitval,bitshift,bitmask,active_fg,inactive_fg
key_types=_INT_,_STRING_,_STRING_,_INT_,_INT_,_INT_,_STRING_,_STRING_
page=0
active_fg=red
inactive_fg=dim grey
bind_to_list=runtime_status
source=enginebit
bitval=1
bitshift=1
bitmask=2

